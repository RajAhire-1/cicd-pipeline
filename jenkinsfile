pipeline {
    agent any

    stages {
        stage('Pull Code') {
            steps {
                git branch: 'master', url: 'https://github.com/iamtruptimane/pythonapp.git'
            }
        }

        stage('Build') {
            steps {
                echo 'ğŸ› ï¸ Building Node.js application...'
                sh 'npm install'
            }
        }

        stage('Test') {
            steps {
                echo 'ğŸ§ª Running tests...'
                sh 'npm test || echo "No test script defined"'
            }
        }

        stage('Deploy') {
            steps {
                echo 'ğŸš€ Deploying application...'
                sh 'pm2 restart app || pm2 start app.js --name node-cicd'
            }
        }
    }

    post {
        success {
            echo 'âœ… Pipeline executed successfully!'
        }
        failure {
            echo 'âŒ Pipeline failed â€” check logs for errors.'
        }
    }
}
